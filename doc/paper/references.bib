	file = {Rudnick_Milton_2003_Risk of indoor airborne infection transmission estimated from carbon dioxide.pdf:/Users/nb22i345/Zotero/storage/C3CJK4TJ/Rudnick_Milton_2003_Risk of indoor airborne infection transmission estimated from carbon dioxide.pdf:application/pdf},
